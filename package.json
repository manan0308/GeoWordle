{
  "name": "geowordle",
  "version": "2.0.0",
  "description": "A geographical word guessing game",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build --prefix client",
    "test": "npm run test:server && npm run test:client",
    "test:server": "NODE_ENV=test jest --config jest.server.config.js --passWithNoTests",
    "test:client": "npm test --prefix client -- --watchAll=false --passWithNoTests",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "game",
    "geography",
    "wordle"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": "18.20.3",
    "npm": "10.8.1"
  }
}
